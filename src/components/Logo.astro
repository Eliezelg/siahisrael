---
interface Props {
    src: string;
    alt: string;
    class?: string;
}

const { src, alt, class: className } = Astro.props;
---
<div class={`logo ${className || ''}`}>
    <img src={src} alt={alt} />
</div>

<style>
    .logo {
        text-align: center;
        margin-bottom: 1rem;
    }
    img {
        max-width: 200px;
        height: auto;
        border-radius: 8px;
    }
</style>