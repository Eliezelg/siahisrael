---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---
<div class="page-header">
    <h1>{title}</h1>
    {subtitle && <p>{subtitle}</p>}
</div>

<style>
    .page-header {
        background: var(--bg-gradient);
        color: white;
        padding: 4rem 2rem;
        text-align: center;
        margin-bottom: 3rem;
        clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
    }
    h1 {
        font-size: 2.5rem;
        margin: 0 0 1rem 0;
    }
    p {
        font-size: 1.2rem;
        opacity: 0.9;
        margin: 0;
    }
</style>