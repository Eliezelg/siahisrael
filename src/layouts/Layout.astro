---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="he" dir="rtl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="בית הכנסת שיח ישראל - ירושלים" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 52, 152, 219;
		--accent-light: 41, 128, 185;
		--accent-dark: 44, 62, 80;
		--bg-gradient: linear-gradient(135deg, rgb(var(--accent-light)) 0%, rgb(var(--accent-dark)) 100%);
	}
	html {
		font-family: 'Heebo', system-ui, sans-serif;
		background: #f5f6f7;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
		line-height: 1.6;
	}
	.card {
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}
	.card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
	}
	.section-title {
		font-size: 2rem;
		color: rgb(var(--accent-dark));
		text-align: center;
		margin-bottom: 2rem;
		position: relative;
		padding-bottom: 1rem;
	}
	.section-title::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: var(--bg-gradient);
		border-radius: 2px;
	}
</style>